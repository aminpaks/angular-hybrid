{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "root/*": ["src/app/*"]
        },
        "allowJs": true,
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "removeComments": true,
        "strictNullChecks": false
    },
    "include": [
        "src/**/*"
    ]
}
